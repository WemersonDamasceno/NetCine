<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.CriarContaActivity">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            app:civ_border_color="@color/colorCinza"
            app:civ_border_width="2dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorCinza"
            android:src="@drawable/pessoas_assistindo_tv"/>


        <EditText
            android:id="@+id/edNomeNovo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_redondo"
            android:backgroundTint="@color/colorCinza"
            android:ems="13"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:hint="Nome"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edEmailNovo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/text_redondo"
                android:backgroundTint="@color/colorCinza"
                android:ems="13"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_til"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:counterEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/edSenhaNovo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/text_redondo"
                android:backgroundTint="@color/colorCinza"
                android:ems="13"
                android:hint="@string/senha"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnEntrarNovo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borda_arrendondados"
        android:ems="13"
        android:text="Criar Conta"
        android:textColor="#F2F2F5"
        android:textStyle="bold"/>




</LinearLayout>