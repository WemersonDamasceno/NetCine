<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardFilme"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:cardBackgroundColor="@color/colorCinza"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFilme"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/teste_filme_rambo" />

            <TextView
                android:id="@+id/nomeFilme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:text="Rambo atÃ© o fim"
                android:textColor="@color/colorPreto"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>